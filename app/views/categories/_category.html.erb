<div class="card my-2">
  <div class="card-bdy py-1">
    <div class="card-title mb-0 d-flex d-row justify-content-between align-items-center w-100">
      <h5 class="m-0 ms-2">
        <%= category.name.capitalize %>
      </h5>
      <div class="mx-1">
        <% if category.doctors.include? current_user %>
          <%= button_to 'Delete', categories_delete_doctor_path(category), method: :delete, form_class: 'zero-size-form', class: 'btn btn-danger btn-block' %>
        <% else %>
          <%= button_to 'Add', categories_add_doctor_path(category), method: :post, form_class: 'zero-size-form', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
